extends base

block content
  ul.abstract-list
    for post in posts
      .meta
        .meta
          h2.article-title
            a(href=post.url)= post.title
          .article-date
            a.extra-switch(href='javascript:void(0);')= post.date.format("%b %d %Y")
        .extra Category：
          if post.category
            a(href=post.category.url)= post.category.title
          else
            a None
        .extra Tags：
          if post.tags: for tag in post.tags
				    a(href="/tags/{{ tag }}")= tag
          else
            a None
              
  
  nav.pagination
    if paginator.has_previous
      a#left-navigator(href=paginator.pre_url)
        | Newer
    if paginator.has_next
      a#right-navigator(href=paginator.next_url)
        | Older